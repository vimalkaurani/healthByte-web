server {
  server_name myfit-pensieve.practodev.com;
  listen 80;
  listen 443 ssl;
  client_max_body_size 128m;

  
 
  access_log /var/log/nginx/fit1.access.log;
  error_log  /var/log/nginx/fit1.error.log;


  root /home/ubuntu/www/internship/healthByte-web/fit-web/app;

  location / {
    try_files $uri @app;
  }

  location ~ ^/api(.*)$ {
    root /home/ubuntu/www/internship/healthByte/web;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    include fastcgi_params;
    fastcgi_param SCRIPT_FILENAME $document_root/app_dev.php;
    fastcgi_param REQUEST_URI $1;
  }
  location @app {
    index  index.htm index.html;
  }

}
